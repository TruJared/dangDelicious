mixin storeForm(store = {})
  form(action="/add" method="POST" class="card")
    label(for="name") Name
    input(type="text" name="name")
    label(for="name") Description
    textarea(name="description")
    - const choices = ['WiFi', 'Open Late', 'Vegetarian', 'Family Friendly', 'Serves Alcohol']
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type="checkbox" id=choice value=choice name="tags")
          label(for=choice)= choice
    input(type="submit" value="Save üç™" class="button")
